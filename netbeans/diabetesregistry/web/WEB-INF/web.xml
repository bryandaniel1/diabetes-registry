<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <resource-ref>
        <res-ref-name>jdbc/diabetes_registry</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <filter>
        <filter-name>Remote Address Filter</filter-name>
        <filter-class>org.apache.catalina.filters.RemoteAddrFilter</filter-class>
        <init-param>
            <param-name>allow</param-name>
            <param-value>127\.0\.0\.1</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>HeadersFilter</filter-name>
        <filter-class>util.HeadersFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>util.UserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdministrationFilter</filter-name>
        <filter-class>util.AdministrationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Remote Address Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HeadersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/quality/*</url-pattern>
        <url-pattern>/home/*</url-pattern>
        <url-pattern>/newpatient/*</url-pattern>
        <url-pattern>/updatepatient/*</url-pattern>
        <url-pattern>/dataentry/*</url-pattern>
        <url-pattern>/history/*</url-pattern>
        <url-pattern>/treatment/*</url-pattern>
        <url-pattern>/statistics/*</url-pattern>
        <url-pattern>/drawline/*</url-pattern>
        <url-pattern>/drawchart/*</url-pattern>
        <url-pattern>/progress/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/calllists/*</url-pattern>
        <url-pattern>/includes/homeheader.jsp</url-pattern>
        <url-pattern>/includes/taskheader.jsp</url-pattern>
        <url-pattern>/includes/footer.jsp</url-pattern>
        <url-pattern>/includes/adminnav.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdministrationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>util.ReferencesUtil</listener-class>
    </listener>
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>controller.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>controller.SignOutServlet</servlet-class>
    </servlet>
    <error-page>
        <error-code>404</error-code>
        <location>/error_404.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QualityServlet</servlet-name>
        <servlet-class>controller.QualityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>controller.PatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataEntryServlet</servlet-name>
        <servlet-class>controller.DataEntryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientTreatmentServlet</servlet-name>
        <servlet-class>controller.PatientTreatmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientHistoryServlet</servlet-name>
        <servlet-class>controller.PatientHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChartAndGraphServlet</servlet-name>
        <servlet-class>controller.ChartAndGraphServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PopulationStatisticsServlet</servlet-name>
        <servlet-class>controller.PopulationStatisticsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>controller.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdministrationServlet</servlet-name>
        <servlet-class>controller.AdministrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CallListServlet</servlet-name>
        <servlet-class>controller.CallListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProgressNoteServlet</servlet-name>
        <servlet-class>controller.ProgressNoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PDFServlet</servlet-name>
        <servlet-class>controller.PDFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
        <url-pattern>/existinguser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QualityServlet</servlet-name>
        <url-pattern>/quality</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/newpatient</url-pattern>
        <url-pattern>/updatepatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataEntryServlet</servlet-name>
        <url-pattern>/dataentry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientTreatmentServlet</servlet-name>
        <url-pattern>/treatment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientHistoryServlet</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChartAndGraphServlet</servlet-name>
        <url-pattern>/drawline</url-pattern>
        <url-pattern>/drawchart/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PopulationStatisticsServlet</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministrationServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CallListServlet</servlet-name>
        <url-pattern>/calllists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProgressNoteServlet</servlet-name>
        <url-pattern>/progress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PDFServlet</servlet-name>
        <url-pattern>/viewpdf</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Registry</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
